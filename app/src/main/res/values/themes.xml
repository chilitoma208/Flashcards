<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flashcards" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="android:colorForeground">@color/purple_700</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="selectFileDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/purple_200</item>
        <item name="android:windowMinWidthMajor">30%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonBarButtonStyle.Positive</item>
    </style>

    <style name="explain" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">8sp</item>
        <item name="buttonBarStyle">@style/buttonBarButtonStyles</item>
    </style>
    <style name="buttonBarButtonStyles" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:width">24dp</item>
        <item name="android:height">24dp</item>
    </style>

    <style name="CustomCheckbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="colorControlActivated">#6D0AA9</item>
    </style>

    <style name="buttonBarButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored" />
    <style name="buttonBarButtonStyle.Positive">
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="buttonBarButtonStyle.Neutral">
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="Theme.Flashcards.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Flashcards.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Flashcards.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>